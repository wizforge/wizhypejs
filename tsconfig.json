{
  "compilerOptions": {
    /* File Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Module System */
    "module": "NodeNext",
    "target": "ESNext",
    "moduleResolution": "NodeNext",

    /* Type Definitions */
    "types": ["node"],
    "lib": ["ESNext"],
    
    /* Output Options */
    "sourceMap": true,
    "declaration": true,
    "declarationMap": true,

    /* Strict Type Checking */
    "strict": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,

    /* Style and Safety */
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,

    /* Other Settings */
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
